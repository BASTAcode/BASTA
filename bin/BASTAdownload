#!/usr/bin/env python3
"""
Download stuff for BASTA. Make sure this file has run permissions and is added to PATH!
"""
import argparse
from basta.downloader import get_grid


def main():
    """Main"""
    helptext = "Download assets for BASTA. Currently, only grids are supported!"
    parser = argparse.ArgumentParser(description=helptext)

    # Only grids are supported!
    allowed_grids = ["16CygA", "validation", "iso", "16CygA_v1"]
    parser.add_argument(
        "grid", help="The grid to download. Allowed cases: {0}".format(allowed_grids)
    )
    args = parser.parse_args()

    if args.grid not in allowed_grids:
        raise ValueError(
            "Unknown grid requsted! Select from: {0}".format(allowed_grids)
        )

    get_grid(args.grid)


if __name__ == "__main__":
    main()
